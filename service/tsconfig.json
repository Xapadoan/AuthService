{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["service/src", "shared"],
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./service/src/lib/*"],
      "@data": ["./service/src/data"],
      "@controllers/*": ["./service/src/controllers/*"],
      "@middlewares/*": ["./service/src/middlewares/*"]
    }
  },
  "include": ["**/*.ts"],
    "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
